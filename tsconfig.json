{
  "compilerOptions": {
    "jsx": "react",
    "target": "es6",
    "module": "commonjs",
    "rootDir": "src",
    "outDir": "./dist",
    "moduleResolution": "node",
    "strict": true,
    "noImplicitAny": false,
    "removeComments": true,
    "esModuleInterop": true,
    "declaration": true,
    "sourceMap": true,
    "typeRoots": ["./node_modules/@types"]
  },
  "include": ["src/**/*", "src/*"],
  "exclude": ["node_modules"]
}
